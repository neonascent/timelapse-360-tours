		<hotspot name="spot7" style="skin_hotspotstyle" ath="173.439" atv="-3.314" linkedscene="scene5" />
		<hotspot name="spot8" style="skin_hotspotstyle" ath="206.480" atv="-1.793" linkedscene="scene8" />
		<hotspot name="scene1_spot9" style="hotspot_video" ath="271.122" atv="-16.873" onclick="js( myHotspots.clicked(scene1_spot9 ) );" />
